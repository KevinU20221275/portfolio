---
import  { basic } from '../../cv.json';

const {education} = basic

const educationInfo = education[0]

const { institution, degree, major, graduationYear, courses} = educationInfo
---

<section class="mt-4 py-4">
    <h3 class="text-2xl font-bold">Education</h3>
    <div class="flex justify-between">
        <div>
            <h3 class="text-xl font-medium">{institution}</h3>
            <p class="opacity-65">{major}</p>
        </div>
        <p class="font-medium">Graduated {graduationYear}</p>
    </div>
    <div class="mt-4">
        <h4 class="text-xl font-medium text-center">Courses</h4>
        <ul class="grid gap-2">
            {courses.map((course, index) => (
                <li class="bg-[#343444] p-2 my-2 rounded-md w-full flex flex-col gap-2 justify-between">
                    <p class="font-semibold text-sm">{course.name}</p>
                    <span class="text-xs opacity-60">{course.institution}</span>
                    <a href={course.url} target="_blank" class="px-4 py-2 rounded-md bg-[#232344] hover:bg-[#121222] text-center">See</a>
                </li>
            ))}
        </ul>
    </div>
</section>

<style>
    ul {
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    }
</style>